---
import TextReveal from '@/components/TextReveal.astro'
---

<section
  data-contact
  class="bg-dark-blue text-steel-blue py-40 lg:py-52 xl:py-60 px-8"
>
  <div class="flex flex-col gap-8 max-w-2xl mx-auto">
    <div class="flex flex-col gap-4">
      <h2 class="text-white text-3xl lg:text-4xl 2xl:text-5xl font-semibold">
        Bize Ulaşın
      </h2>

      <p class="text-lg">Yeni projeler ve fikirler için iletişime geçin.</p>
    </div>

    <form
      action="https://api.staticforms.xyz/submit"
      method="POST"
      class="flex flex-col gap-6"
    >
      <input type="hidden" name="apiKey" value="sf_ka3g7kdj68k7a31l5ad6m488" />
      <input type="hidden" name="replyTo" value="@" />
      <input
        type="text"
        name="honeypot"
        style="display: none"
        tabindex="-1"
        autocomplete="off"
      />

      <div class="flex flex-col">
        <label for="name" class="text-steel-blue text-sm font-medium mb-2"
          >İsim</label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          class="p-3 bg-dark-blue border border-steel-blue rounded-md text-white focus:outline-none focus:border-white transition-colors duration-200"
        />
      </div>

      <div class="flex flex-col">
        <label for="company" class="text-steel-blue text-sm font-medium mb-2"
          >Şirket</label
        >
        <input
          type="text"
          id="company"
          name="$company"
          class="p-3 bg-dark-blue border border-steel-blue rounded-md text-white focus:outline-none focus:border-white transition-colors duration-200"
        />
      </div>

      <div class="flex flex-col">
        <label for="phone" class="text-steel-blue text-sm font-medium mb-2"
          >Telefon</label
        >
        <input
          type="tel"
          id="phone"
          name="$phone"
          class="p-3 bg-dark-blue border border-steel-blue rounded-md text-white focus:outline-none focus:border-white transition-colors duration-200"
        />
      </div>

      <button
        type="submit"
        class="bg-steel-blue text-dark-blue font-semibold py-3 px-6 rounded-md hover:bg-white transition-colors duration-300 self-start"
      >
        Gönder
      </button>
    </form>
  </div>
</section>

<script>
  import { DOMLoaded } from '../ts/events'
  import { fadeIn } from '../ts/animations'

  DOMLoaded(() => {
    const trigger = document.querySelector('[data-contact]') as HTMLElement
    const target = trigger.querySelector(':scope > div') as HTMLElement

    fadeIn(trigger, target)
  })
</script>
